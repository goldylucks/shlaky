{
  "restartable": "rs",
  "ignore": [
    ".git",
    "node_modules/**/node_modules",
    "lib",
    "dist",
    "packages/**/node_modules",
    "packages/**/dist",
    "packages/**/lib"
  ],
  "verbose": true,
  "execMap": {
    "js": "node"
  },

  "runOnChangeOnly": false,
  "watch": [
    "packages/**/src/**/*.js"
  ],
  "env": {
    "NODE_ENV": "development"
  },
  "ext": "js,json"
}
